<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_a_background_login"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.github.mmin18.widget.RealtimeBlurView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:realtimeBlurRadius="250dp"
                    app:realtimeOverlayColor="#A4F8F6F6" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.55"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_pc_start_left_login"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="86dp"
                    android:alpha="0.55"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_pc_start_right_login"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imgTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_pc_start_top_login"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/imageView5"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.baudelio.test.core.utils.roundablelayout.CURoundableLayout
                    android:id="@+id/imgLogo"
                    android:layout_width="45dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="25dp"
                    android:elevation="7dp"
                    app:cu_backgroundColor="@color/primary_700"
                    app:cu_cornerLeftSide="20dp"
                    app:cu_cornerRightTop="20dp"
                    app:layout_constraintEnd_toStartOf="@+id/imgTop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgTop">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dog_logo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </com.baudelio.test.core.utils.roundablelayout.CURoundableLayout>

                <com.baudelio.test.core.utils.roundablelayout.CURoundableLayout
                    android:id="@+id/imgOne"
                    android:layout_width="146dp"
                    android:layout_height="220dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:elevation="6dp"
                    app:cu_cornerAll="80dp"
                    app:layout_constraintEnd_toStartOf="@+id/imageView9"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgTop">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dog_logo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </com.baudelio.test.core.utils.roundablelayout.CURoundableLayout>

                <com.baudelio.test.core.utils.roundablelayout.CURoundableLayout
                    android:id="@+id/imgTwo"
                    android:layout_width="146dp"
                    android:layout_height="220dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="80dp"
                    android:elevation="6dp"
                    app:cu_cornerAll="80dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView10"
                    app:layout_constraintTop_toTopOf="@+id/imgOne">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logo_macropay"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </com.baudelio.test.core.utils.roundablelayout.CURoundableLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="38dp"
                    android:fontFamily="@font/helvetica_neue_bold"
                    android:text="Iniciar sesion"
                    android:textColor="@color/black_700"
                    android:textSize="35sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgTwo" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/helvetica_neue_bold"
                    android:text="Ingresa tus datos"
                    android:textColor="#A9A9A9"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <com.baudelio.test.core.utils.roundablelayout.CURoundableLayout
                    android:id="@+id/roundableLayout4"
                    android:layout_width="0dp"
                    android:layout_height="57dp"
                    android:layout_marginHorizontal="28dp"
                    android:layout_marginTop="40dp"
                    android:paddingHorizontal="10dp"
                    app:cu_cornerAll="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView10">

                    <EditText
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:fontFamily="@font/montserrat_semibold"
                        android:hint="@string/correo_text"
                        android:inputType="textEmailAddress"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:paddingHorizontal="10dp"
                        android:text="admin@macropay.mx"
                        android:textColor="@color/black_700"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="correo@test.com" />

                </com.baudelio.test.core.utils.roundablelayout.CURoundableLayout>

                <com.baudelio.test.core.utils.roundablelayout.CURoundableLayout
                    android:id="@+id/roundableLayout5"
                    android:layout_width="0dp"
                    android:layout_height="57dp"
                    android:layout_marginHorizontal="28dp"
                    android:layout_marginTop="17dp"
                    android:padding="10dp"
                    app:cu_cornerAll="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/roundableLayout4">

                    <EditText
                        android:id="@+id/txtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/white"
                        android:fontFamily="@font/montserrat_semibold"
                        android:hint="@string/psw_text"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:maxLength="50"
                        android:paddingHorizontal="10dp"
                        android:textColor="@color/black_700"
                        android:textSize="15sp"
                        android:text="Admin1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="test123" />

                </com.baudelio.test.core.utils.roundablelayout.CURoundableLayout>

                <com.baudelio.test.core.utils.shadowlayout.CUShadowLayout
                    android:id="@+id/btnReady"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/roundableLayout5"
                    app:sl_shadow_color="@color/primary_300"
                    app:sl_shadowed="true">

                    <com.baudelio.test.core.utils.roundablelayout.CURoundableLayout
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="15dp"
                        android:clickable="true"
                        android:elevation="5dp"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cu_backgroundColor="@color/primary_700"
                        app:cu_cornerAll="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="@string/login_enter_text"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </com.baudelio.test.core.utils.roundablelayout.CURoundableLayout>

                </com.baudelio.test.core.utils.shadowlayout.CUShadowLayout>

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnReady"
                    app:layout_constraintVertical_bias="1.0">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ya_conoces_nuestro_sitio"
                        android:textColor="#373444"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/helvetica_neue_bold"
                        android:text="Visitanos"
                        android:textColor="#DD2F34"
                        android:textSize="15sp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>